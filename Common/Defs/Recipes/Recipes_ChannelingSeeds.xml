  <RecipeDef>
    <defName>TS_GlowsapTreeSeedRecipe</defName>
    <label>shape channeling seed (glowsap tree) </label>
    <description>Shape a seed that will quickly grow into a glowsap tree. Glowsap trees periodically produce large amounts of glowsap.</description>
    <jobString>shaping a sap transposer seed.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <workSkill>Plants</workSkill>
      <skillRequirements>
        <Plants>4</Plants>
      </skillRequirements>
    <researchPrerequisite>TS_SapBasics</researchPrerequisite>
    <effectWorking>Sculpt</effectWorking>
    <soundWorking>Recipe_MakeBow</soundWorking>
    <workAmount>6400</workAmount>
    <allowMixingIngredients>false</allowMixingIngredients>
    <targetCountAdjustment>1</targetCountAdjustment>
    <products>
      <TS_Seed_SapFilter>1</TS_Seed_SapFilter>
    </products>
    <displayPriority>4</displayPriority>
  </RecipeDef>

