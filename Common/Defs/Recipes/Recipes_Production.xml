<?xml version="1.0" encoding="utf-8" ?>
<Defs>
  <RecipeDef>
    <defName>TS_TerraforgeSeedRecipe</defName>
    <label>shape channeling seed (terraforge) </label>
    <description>Shape a seed that will quickly grow into a Terraforge. The terraforge is crucial in utilizing and advancing Terratech.</description>
    <jobString>shaping a sap terraforge seed.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <workSkill>Plants</workSkill>
      <skillRequirements>
        <Plants>4</Plants>
      </skillRequirements>
    <researchPrerequisite>TS_TerraseedEssentials</researchPrerequisite>
    <effectWorking>Sculpt</effectWorking>
    <soundWorking>Recipe_MakeBow</soundWorking>
    <workAmount>6400</workAmount>
    <allowMixingIngredients>false</allowMixingIngredients>
    <targetCountAdjustment>1</targetCountAdjustment>
    <products>
      <TS_Seed_Terraforge>1</TS_Seed_Terraforge>
    </products>
    <displayPriority>900</displayPriority>
  </RecipeDef>

