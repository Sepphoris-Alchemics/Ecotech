<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!--

-->

  <ThingDef Name="EC_FundamentalPlantBase" ParentName="PlantBaseNonEdible" Abstract="True">
    <graphicData>
      <texPath>Things/Plant/Terraforge_Mature</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <minifiedDef IsNull="True" />
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
    </statBases>
    <selectable>true</selectable>
    <pathCost>14</pathCost>
    <maxTechLevelToBuild>Medieval</maxTechLevelToBuild>
    <plant>
      <maxMeshCount>1</maxMeshCount>
      <growDays>0.5</growDays> 
      <fertilityMin>0</fertilityMin>
      <fertilitySensitivity>0</fertilitySensitivity>
      <growMinGlow>0</growMinGlow>
      <burnedThingDef IsNull="True" />
      <immatureGraphicPath>Things/Plant/Terraforge_Immature</immatureGraphicPath>
      <sowWork>270</sowWork>
      <sowTags>
        <li>Ground</li>
      </sowTags>
      <blockAdjacentSow>true</blockAdjacentSow>
      <minSpacingBetweenSamePlant>4.9</minSpacingBetweenSamePlant>
      <topWindExposure>0</topWindExposure>
      <visualSizeRange>0.7~1</visualSizeRange>
      <treeLoversCareIfChopped>false</treeLoversCareIfChopped>
      <sowResearchPrerequisites Inherit="False" />
      <mustBeWildToSow>true</mustBeWildToSow>
      <dieIfNoSunlight>false</dieIfNoSunlight>
      <dieFromToxicFallout>false</dieFromToxicFallout>
      <showGrowthInInspectPane>true</showGrowthInInspectPane>
      <purpose>Misc</purpose>
    </plant>
  </ThingDef>

  <ThingDef ParentName="EC_FundamentalPlantBase">
    <defName>EC_TerraforgePlant</defName>
    <label>Terraforge Sprout</label>
    <description>A quickly growing sprout that will shape itself into a Terraforge. Terraforges are critical in utilizing Ecotech.</description>
    <graphicData>
      <texPath>Things/Plant/Terraforge_Mature</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <plant>
      <growDays>0.5</growDays> 
    </plant>
    <comps>
      <li Class="Ecotech.ThingCompProperties_PlantTransformOnMaturity">
        <compClass>Ecotech.ThingComp_PlantTransformOnMaturity</compClass>
        <transformedThing>EC_Terraforge</transformedThing>
        <!--<transformedThingStuff>WoodLog</transformedThingStuff>-->
      </li>
    <li Class="CompProperties_InspectString">
      <inspectString>Growing into: Terraforge</inspectString>
      </li>
    </comps>
  </ThingDef>

  <ThingDef ParentName="EC_FundamentalPlantBase">
    <defName>EC_SmallTerravatPlant</defName>
    <label>Small Terravat Sprout</label>
    <description>A quickly growing sprout that will shape itself into a small Terravat. Takes a fewdays to fully grow.</description>
    <graphicData>
      <texPath>Things/Plant/Terraforge_Mature</texPath>
      <graphicClass>Graphic_Random</graphicClass>
    </graphicData>
    <plant>
      <growDays>1</growDays> 
    </plant>
    <comps>
      <li Class="Ecotech.ThingCompProperties_PlantTransformOnMaturity">
        <compClass>Ecotech.ThingComp_PlantTransformOnMaturity</compClass>
        <transformedThing>EC_TerravatBasic</transformedThing>
        <!--<transformedThingStuff>WoodLog</transformedThingStuff>-->
      </li>
    <li Class="CompProperties_InspectString">
      <inspectString>Growing into: Terraforge</inspectString>
      </li>
    </comps>
  </ThingDef>
</Defs>