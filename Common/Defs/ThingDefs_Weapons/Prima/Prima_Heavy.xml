		<weaponTags Inherit='False'>
      <li>PlantWeapons</li>
		</weaponTags>
    <weaponClasses>
      <li>Ranged</li>
    </weaponClasses>
    <relicChance>0</relicChance>
		<statBases>
      <MaxHitPoints>40</MaxHitPoints> <!--80 shots-->
