<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!--
	Fundamentals are the parts that enable the mod to work. Without anything here, access to the mod would be limited or even not possible at all.
  Anything here needs to make sure that the player can access Terratech from scratch, if they wanted to.
-->

  <ThingDef ParentName="ResourceBase">
    <defName>TS_Seed_Terraforge</defName>
    <label>Terraforge Channeling Seed</label>
    <description>A durable seed specifically patterned to immediately grow into a Terraforge, which is critical in Terratech usage. The Terraforge violently roots into the surface beneath it, making it unable to be moved once planted.
\n\nThis seed ignores fertility, allowing it to be planted on many surfaces.</description>
    <possessionCount>0</possessionCount>
    <tickerType>Normal</tickerType>
    <graphicData>
      <texPath>Things/Resource/SurgeSeed</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
      <drawSize>0.3</drawSize>
    </graphicData>
    <stackLimit>8</stackLimit>
    <healthAffectsPrice>false</healthAffectsPrice>
    <intricate>true</intricate> <!-- Not returned to player when product made of this is smelted. -->
    <statBases>
      <MaxHitPoints>80</MaxHitPoints>
      <MarketValue>105</MarketValue>
      <Mass>0.015</Mass>
      <Flammability>0.5</Flammability>
      <DeteriorationRate>0</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>PlantMatter</li>
    </thingCategories>
    <!--<recipeMaker>
      <recipeUsers>
        <li>CraftingSpot</li>
      </recipeUsers>
      <skillRequirements>
        <Plants>6</Plants>
      </skillRequirements>
      <displayPriority>510</displayPriority>
    </recipeMaker>-->
    <comps>
      <li Class="CompProperties_Plantable">
        <plantDefToSpawn>TS_TerraforgePlant</plantDefToSpawn>
      </li>
      <li Class="CompProperties_Glower">
        <glowRadius>0.9</glowRadius>
        <glowColor>(370,370,370,0)</glowColor>
      </li>
    </comps>
    <allowedArchonexusCount>2</allowedArchonexusCount>
  </ThingDef>

