<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ResourceBase">
    <defName>TS_Seed_PrimaSMGTurret</defName>
    <label>Thistle Turret Seed</label>
    <description>A special seed acquired from rapid-firing Prima weapons. Once planted, the seed will immediately burst into vines and wood, taking root and forming into the quick-firing Thistle Turret.
Proper knowledge on the seed is required to plant it safely and effectively.
\n\nThe seed will wither away if not planted soon after acquisition.</description>
    <possessionCount>4</possessionCount>
    <tickerType>Normal</tickerType>
    <graphicData>
      <texPath>Things/Resource/PrimaSeeds/ImmatureSeed</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
      <drawSize>0.3</drawSize>
    </graphicData>
    <stackLimit>8</stackLimit>
    <healthAffectsPrice>false</healthAffectsPrice>
    <intricate>true</intricate> <!-- Not returned to player when product made of this is smelted. -->
    <statBases>
      <MaxHitPoints>20</MaxHitPoints>
      <MarketValue>250</MarketValue>
      <Mass>0.015</Mass>
      <Flammability>2</Flammability>
      <DeteriorationRate>0</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>PlantMatter</li>
    </thingCategories>
    <comps>
      <li Class="CompProperties_Plantable">
        <plantDefToSpawn>TS_PrimaTurretPlant_SMG</plantDefToSpawn>
      </li>
      <li Class="CompProperties_Glower">
        <glowRadius>0.9</glowRadius>
        <glowColor>(370,370,370,0)</glowColor>
      </li>
      <li Class="CompProperties_Lifespan">
        <lifespanTicks>360000</lifespanTicks> <!--1.5x longer than surge seeds-->
      </li>
    </comps>
    <allowedArchonexusCount>8</allowedArchonexusCount>
  </ThingDef>

