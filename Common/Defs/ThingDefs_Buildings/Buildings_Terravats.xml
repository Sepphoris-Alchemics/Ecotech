<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BenchBase">
    <defName>TS_TerravatGlowsap</defName>
    <label>Glowsap Terravat</label>
    <description>An organic wooden growth that sustains an accessible glowsap chamber, designed for Terratech study, experimentation, and creations. This structure is critical for utilizing Terratech that the planet can't support, or what we do not yet understand.
\n\nOver time some of it's capabilities may be able to be performed in other, more efficient manners. In these cases, the Terravat will simply stop supporting these redundant procedures.</description>
    <thingClass>Building_WorkTable</thingClass>
    <size>(1,1)</size>
    <costList>
      <WoodLog>80</WoodLog>
      <TS_Glowsap>30</TS_Glowsap>
    </costList>
    <tickerType>Normal</tickerType>
    <graphicData>
      <texPath>Things/Building/Terravats/VatGlowsap</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
      <drawSize>(2,2)</drawSize>
      <drawOffset>(0,0,0.3)</drawOffset>
      <drawRotated>false</drawRotated>
      <damageData>
        <rect>(0.3,0,2.7,1)</rect>
        <cornerTR>Damage/Corner</cornerTR>
        <cornerBR>Damage/Corner</cornerBR>
      </damageData>
    </graphicData>
    <uiIconScale>0.5</uiIconScale>
    <maxTechLevelToBuild>Medieval</maxTechLevelToBuild>
    <researchPrerequisites>
      <li>TS_Terravats</li>
    </researchPrerequisites>
    <castEdgeShadows>false</castEdgeShadows>
    <staticSunShadowHeight>0.20</staticSunShadowHeight>
    <altitudeLayer>Building</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <WorkToBuild>3400</WorkToBuild>
      <Mass>60</Mass>
      <Flammability>3</Flammability>
      <Beauty>1.5</Beauty>
      <Cleanliness>1</Cleanliness>
    </statBases>
    <interactionCellIcon IsNull="True"/>
    <minifiedDef IsNull="True" />
    <thingCategories IsNull="True"/>
    <placeWorkers>
      <li>PlaceWorker_ShowFacilitiesConnections</li>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
    <!--<defaultPlacingRot>South</defaultPlacingRot>-->
    <constructionSkillPrerequisite>3</constructionSkillPrerequisite>
    <fillPercent>0.5</fillPercent>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <hasInteractionCell>true</hasInteractionCell>
    <designationCategory>TerratechDesignation</designationCategory>
    <uiOrder>2630</uiOrder>
    <leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
    <resourcesFractionWhenDeconstructed>0.1</resourcesFractionWhenDeconstructed>
    <recipes>
      <li>TS_ExtractPrimaStakeTurretSeed</li>
      <li>TS_ExtractPrimaSMGTurretSeed</li>
      <li>TS_ExtractPrimaShotgunTurretSeed</li>
      <li>TS_PrimaTurretSeedApexToStake</li>
      <li>TS_PrimaTurretSeedApexToSMG</li>
      <li>TS_PrimaTurretSeedApexToShotgun</li>
    </recipes>
    <inspectorTabs>
      <li>ITab_Bills</li>
    </inspectorTabs>
    <surfaceType>Item</surfaceType>
    <killedLeavings>
      <WoodLog>12</WoodLog>
    </killedLeavings>
    <building>
      <deconstructible>false</deconstructible>
      <artificialForMeditationPurposes>false</artificialForMeditationPurposes>
    </building>
    <comps>
      <li Class="CompProperties_Glower">
        <glowRadius>3.9</glowRadius>
        <glowColor>(239,84,203,0)</glowColor>
      </li>
      <li Class="CompProperties_Facility">
        <statOffsets>
          <ResearchSpeedFactor>0.1</ResearchSpeedFactor>
        </statOffsets>
        <maxSimultaneous>1</maxSimultaneous>
        <maxDistance>9</maxDistance>
      </li>
      <li Class="CompProperties_Art">
        <canBeEnjoyedAsArt>true</canBeEnjoyedAsArt>
      </li>
      <li Class="CompProperties_Refuelable">
        <targetFuelLevelConfigurable>true</targetFuelLevelConfigurable>
        <initialConfigurableTargetFuelLevel>15</initialConfigurableTargetFuelLevel>
        <fuelConsumptionRate>0.25</fuelConsumptionRate>
        <fuelCapacity>30</fuelCapacity>
        <fuelFilter>
          <thingDefs>
            <li>TS_Glowsap</li>
          </thingDefs>
        </fuelFilter>
        <initialFuelPercent>0.5</initialFuelPercent>
        <fuelLabel>Glowsap</fuelLabel>
        <fuelGizmoLabel>Healthy glowsap</fuelGizmoLabel>
        <outOfFuelMessage>Requires Glowsap replacement</outOfFuelMessage>
        <showFuelGizmo>true</showFuelGizmo>
        <showAllowAutoRefuelToggle>true</showAllowAutoRefuelToggle>
      </li>
    </comps>
  </ThingDef>
</Defs>